<definitions name="UtilisateurService"
    targetNamespace="http://www.examples.com/wsdl/UtilisateurService.wsdl"
    xmlns="http://schemas.xmlsoap.org/wsdl/"
    xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
    xmlns:tns="http://www.examples.com/wsdl/UtilisateurService.wsdl"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema">

    <message name="listUtilisateursRequest"/>
    <message name="listUtilisateursResponse">
        <part name="utilisateurs" type="xsd:string"/>
    </message>

    <message name="createUtilisateurRequest">
        <part name="nom" type="xsd:string"/>
        <part name="email" type="xsd:string"/>
        <part name="motDePasse" type="xsd:string"/>
